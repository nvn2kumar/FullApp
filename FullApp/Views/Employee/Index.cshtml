@model IEnumerable<FullApp.Models.Employee>
    <h1 style="text-align:center;color:darkmagenta;font-family:cursive">Our Employees</h1>
<br />
<a asp-action="Create" asp-controller="Employee" class="btn btn-outline-warning" >Add New Employee</a>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Image</th>
        <th></th>
    </tr>
    @foreach (var emp in Model)
    {
<tr>
    <td>@emp.Id</td>
    <td>@emp.FirstName @emp.LastName</td>
    <td>@emp.Email</td>
    <td><img src="@emp.Image" height="60" width="60" /></td>
    <td>
        <a asp-action="Edit" asp-route-id="@emp.Id" class="btn btn-primary">Edit</a> | <a asp-action="Details" asp-controller="Employee" asp-route-id="@emp.Id" class="btn btn-success">Details</a> |
        <a asp-action="Delete" asp-controller="Employee" asp-route-id="@emp.Id" onclick="return confirm('Are you sure you want to delete this Record ?')" class="btn btn-danger">Delete</a>
    </td>
</tr>
    }
    
</table>