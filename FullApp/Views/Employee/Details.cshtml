@model FullApp.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<h1 style="text-align: center; color: darkmagenta; font-family: cursive">Details</h1>

<div>
    <h4>Employee</h4>
    <hr />
    
        <dl class="row">
            <div class="col-8">
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @Model.FirstName  @Model.LastName
            </dd>

            <dt class="col-sm-2">
                Email
            </dt>
            <dd class="col-sm-10">
                @Model.Email
            </dd>
            <dt class="col-sm-2">
                IsActive
            </dt>
            <dd class="col-sm-10">
                @Model.IsActive
            </dd>
</div>
           
<div class="col-4">

    <img src="~/@Model.Image" class="img-fluid" style="text-align:center" />

</div>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a> |
    <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
</div>
